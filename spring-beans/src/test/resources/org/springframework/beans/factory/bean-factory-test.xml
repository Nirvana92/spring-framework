<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="children" class="org.springframework.beans.entity.Children" >
		<property name="father" ref="father" />
	</bean>

	<bean id="father" class="org.springframework.beans.entity.Father">
		<property name="children" ref="children" />
		<property name="name" value="原始对象" />
	</bean>

<!--	<bean id="myPostProcessor" class="org.springframework.beans.post.processor.MyPostProcessor" />-->
</beans>